@model IEnumerable<Ecommerce.Models.Order>

@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1 class="h3 mb-3 font-weight-normal" style="text-align: center"> Checkout Summary</h1>
    <table class="table">
        <tr>
            <th>
                Subtotal
            </th>
            <th>
                Tax
            </th>
            <th>
                Shipping Cost
            </th>
            <th>
                Payment Type
            </th>
            <th>
                Payment Information
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    $@Html.DisplayFor(modelItem => item.PriceTotal)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.Tax)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.ShippingCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentInfo)
                </td>
            </tr>
        }

    </table>
</body>
</html>