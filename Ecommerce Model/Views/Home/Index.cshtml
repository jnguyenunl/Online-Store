@model IEnumerable<Ecommerce.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/images/jumper.jpg" alt="" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Content/images/runner.jpg" alt="" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Content/images/runners.jpg" alt="" style="width:100%;">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
@* Section 1 *@
<div class="container">
    <div class="row" id="margin-section1">
        <div class="col-md-6 col-lg-3">
            <img src="~/Content/images/shoes.jpg" alt="" class="img-section1" />
            <div class="btn-center">
                <a href="#"> FEATURED PRODUCTS</a>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <img src="~/Content/images/socks.jpg" alt="" class="img-section1" />
            <div class="btn-center">
                <a href="#"> FEATURED PRODUCTS</a>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <img src="~/Content/images/beanie.jpg" alt="" class="img-section1" />
            <div class="btn-center">
                <a href="#"> FEATURED PRODUCTS</a>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <img src="~/Content/images/pants.jpg" alt="" class="img-section1" />
            <div class="btn-center">
                <a href="#"> FEATURED PRODUCTS</a>
            </div>
        </div>
    </div>
</div>

<div class="container" id="bg-section2">
    <h2>NEWEST PRODUCTS</h2>
    <div class="row">
        @foreach (var item in Model) {
            <div class="col-md-6 col-lg-3">
                <div class="card">
                    <a href="/Product/Index/@item.ProductID"> @Html.DisplayFor(model => item.Name)</a>
                    <img src="~/Content/images/icon-image.jpg" alt="" style="height: 200px; width: 200px; margin: 10px" />
                    Price: $@Html.DisplayFor(model => item.Price)
                <button class="button">
                    <a onclick="createCartProduct(@(item.ProductID))"><img src="~/Content/images/cart.png" style="width: 20px; height: 20px;"/></a>
                </button>
                </div>
            </div>
        }
        <script>
            function createCartProduct(id) {
                $.ajax({
                    url: "/CartProducts/Create/" + id,
                    type: "POST",
                    async:true,
                    success: function () {
                        alert("The product has been added to your cart.")
                    }
                })
            }
        </script>
    </div>
</div>

